<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:fitsSystemWindows="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_login_icon"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_login_username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/img_login_icon"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="63dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center|left"
                    android:hint="请输入活动名称"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="#FF3F3F50"
                    android:textColorHint="#4d3F3F50"
                    android:textSize="15sp" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_login_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/et_login_username"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center|left"
                    android:hint="请输入活动时间"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="#FF3F3F50"
                    android:textColorHint="#4d3F3F50"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/et_login_pwd"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center|left"
                    android:hint="请输入活动地点"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="#FF3F3F50"
                    android:textColorHint="#4d3F3F50"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_des"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/et_address"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center|left"
                    android:hint="请输入活动简介"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="#FF3F3F50"
                    android:textColorHint="#4d3F3F50"
                    android:textSize="15sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_des"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="54dp"
                    android:layout_marginRight="40dp"
                    android:gravity="center"
                    android:stateListAnimator="@null"
                    android:text="更新活动"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>